<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ChefNextDoor" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- PRIMARY COLORS -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- APP BACKGROUND -->
        <item name="android:windowBackground">@color/green_light</item>

        <!-- STATUS BAR (TOP BAR) -->
        <item name="android:statusBarColor">@color/green_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- FORCE ALL BUTTONS GREEN -->
        <item name="materialButtonStyle">@style/AppButtonStyle</item>

        <!-- EDITTEXT CURSOR + BORDER -->
        <item name="colorControlActivated">@color/green_primary</item>
        <item name="colorControlNormal">@color/green_primary</item>

    </style>

    <!-- GLOBAL BUTTON STYLE -->
    <style name="AppButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
